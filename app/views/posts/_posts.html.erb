<section class='my-4 posts-section'>
  <h5 class='new-posts-today'><%= !kind ? new_vyews(posts).upcase : "ALL VYEWS"%></h5>
  <% posts.each do |post| %>
    <div class='d-flex w-100 post-main'>
      <div>
        <%if post.author.image.attached? %>
          <%= image_tag(post.author.image, size: '80x80') %>
        <%else%>
          <div class='avatar'>
            <%= post.author.name[0] %>
          </div>
        <%end%>
      </div>
      <div class='post-body w-100'>
        <div class='d-flex'>
          <h5><%= post.author.name%></h5>
          <small class='ml-auto'><%= time_ago_in_words(post.created_at)%> ago</small>
        </div>
        <p><%= post.content%></p>
      </div>
    </div>
  <% end %>
</section>
