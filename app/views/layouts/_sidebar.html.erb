<nav class='sidebar position-fixed'>
  <div class='d-flex p-2 profile-top'>
    <%if current_user.image.attached?%>
      <%= image_tag(current_user.image, size: "50x50") %>
    <%else%>
      <div class='avatar'>
        <%= current_user.name[0] %>
      </div>
    <%end%>
    <h5 class='px-1 mx-auto my-auto'><%= current_user.name.upcase%></h5>
  </div>
  <div class='follow-counter f-row'>
    <div class='col-6'>
      <%=current_user.following.size%>
      <p>Following</p>
    </div>
    <div class='col-6'>
      <%=current_user.followers.size%>
      <p>Followers</p>
    </div>
  </div>
  <div class='side-links'>
    <%= link_to posts_path do %>
      <div class='d-flex'>
        <i class='fas fa-home'></i>
        <span>Home</span>
      </div>
    <%end%>
    <%= link_to user_path(current_user) do %>
      <div class='d-flex'>
        <i class='fas fa-user'></i>
        <span>Profile</span>
      </div>
    <%end%>
  </div>
</nav>
